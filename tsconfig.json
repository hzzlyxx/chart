{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "outDir": "./lib",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
